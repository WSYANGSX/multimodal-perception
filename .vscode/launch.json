    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}", // 关键参数1：工作目录设为项目根
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src" // 关键参数2：添加项目根到PYTHONPATH
            },
            "console": "integratedTerminal",
            "justMyCode": true,
        }
    ]
}